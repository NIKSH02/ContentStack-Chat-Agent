# =================================
# SERVER CONFIGURATION
# =================================
PORT=3001
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=*

# =================================
# DATABASE CONFIGURATION
# =================================
MONGODB_URI=mongodb://localhost:27017/chat-agent

# =================================
# JWT AUTHENTICATION
# =================================
# Generate strong secrets: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=your-256-bit-access-secret-key-here
JWT_REFRESH_SECRET=your-256-bit-refresh-secret-key-here

# Token expiry times
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# =================================
# LLM PROVIDER API KEYS
# =================================

# Groq (Free tier available)
# Get your key: https://console.groq.com/keys
GROQ_API_KEY=gsk_your_groq_api_key_here

# Google Gemini (Free tier available)
# Get your key: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# OpenRouter (Pay-per-use)
# Get your key: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-your_openrouter_api_key_here

# =================================
# CONTENTSTACK INTEGRATION
# =================================

# ContentStack OAuth App Configuration
# Register your app: https://app.contentstack.com/#!/apps/manage
CONTENTSTACK_CLIENT_ID=your_contentstack_oauth_client_id
CONTENTSTACK_CLIENT_SECRET=your_contentstack_oauth_client_secret
CONTENTSTACK_REDIRECT_URI=http://localhost:3001/api/oauth/contentstack/callback

# ContentStack App/Management API Base URL
CONTENTSTACK_BASE_URL=https://app.contentstack.com

# ContentStack API Configuration
CONTENTSTACK_API_BASE_URL=https://api.contentstack.io
CONTENTSTACK_CDN_BASE_URL=https://cdn.contentstack.io

# Default ContentStack Region (US, EU, AZURE_NA, AZURE_EU, GCP_NA)
CONTENTSTACK_DEFAULT_REGION=EU

# =================================
# OPTIONAL CONFIGURATIONS
# =================================

# Rate limiting (requests per minute)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session configuration
SESSION_SECRET=your-session-secret-here
SESSION_MAX_AGE=86400000

# Logging level (error, warn, info, debug)
LOG_LEVEL=info

# File upload limits (in MB)
MAX_FILE_SIZE=10

# Email configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# Analytics and monitoring
ANALYTICS_ENABLED=true
MONITORING_ENDPOINT=https://your-monitoring-service.com

# =================================
# DEVELOPMENT ONLY
# =================================
# Debug mode (shows detailed error messages)
DEBUG=true

# Mock external services for testing
MOCK_LLM_PROVIDERS=false

# Development database (separate from production)
DEV_MONGODB_URI=mongodb://localhost:27017/chat-agent-dev
